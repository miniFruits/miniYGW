/* 尝鲜季 */


.hot-sale  .bg-img{
    position: absolute;
}
.hot-sale image{
  width: 100%;
  height: 600rpx;
}

.cxj{
 width: 97%;
  position: absolute;
  bottom: 8rpx;
  left:0;
  right: 0;
  margin: auto;
  z-index: 3;
   height: 346rpx;
   background: #fff;
   border-radius: 8rpx;
}
.cxj .new{
  position: absolute;
  top: 0;
  left: 0;
  width: 88rpx;
  height: 96rpx;
}
.cxj-title{
   height: 98rpx;
 
}
.cxj-title .title{
  height: 60rpx;
  display: block;
  font-size: 32rpx;
  text-align: center;
  line-height: 60rpx;
  color: #42e32f;
}
.cxj-title .title-2{
  height: 28rpx;
  display: block;
  font-size: 24rpx;
  text-align: center;
  line-height:  28rpx;
  color: #394b37;
}
.cxj-inner{
  height: 238rpx;
  display: flex;
  justify-content: space-around;
  position: relative;
}

.cxj-item{
  width: 172rpx;
  height: 238rpx;
  border: .1rem solid #f4f3f3;
}
.cxj-item image{
  width: 168rpx;
  height: 168rpx;
}
.cxj-item text{
  display: block;
  width: 140rpx;
  height: 46rpx;
  line-height: 46rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  border-radius: .1rem;
  background-color: #f4f4f4;
  margin: 0 auto;
}