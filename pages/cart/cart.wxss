}
.van-stepper__minus::before,
.van-stepper__plus::before {
  content: "";
  position: absolute;
  margin: auto;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #666;
  width: 0.5625rem;
  height: 0.0625rem;
}
