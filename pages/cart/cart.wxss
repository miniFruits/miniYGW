/* pages/cart/cart.wxss */
.carthead{
  height:82.5rpx;
  display: flex;
  background: #fff;
  box-shadow: 0 1rpx 2rpx #ccc;
  position: sticky;
  top: 0;
  z-index: 1000;
}
.cartheadleft{
  width: 82.5rpx;
  height:100%;
}
.carthead image{
  width: 100%;
  height:100%;
}
.cartheadmid{
  flex:1;
  text-align: center;
  line-height: 82.5rpx;
  font-size: 34.5rpx;
  color: #444;
}
.cartheadright{
  width: 82.5rpx;
  height: 100%;
}
.cartempty{
background: #f0f2f5;
height: 100%;
}
.cart_content{
  position: relative;
  background: #f0f2f5;
  width: 100%;
  min-height: 100rpx;
  z-index: 999;
}
.empty{
  width: 100%;
  height: 279.3rpx;
  padding-top: 265.2rpx;
  margin-bottom:265.2rpx;
  background: #f0f2f5;
   position: relative;
}
.cartimgwrap{
  text-align: center;
 
}
.cartimg{
  width: 207.2rpx;
  height: 191.3rpx;
}
.imgtag{
  height: 48rpx;
  width: 131.26rpx;
  background: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  line-height: 48rpx;
   position: absolute;
   left:50%;
   bottom: 0;
  transform: translate(-50%);
}

.cart_bottom{
  position: fixed;
  bottom: 0;
  z-index: 1002;
  width: 100%;
  height: 93.76rpx;
  display: flex;
  padding:0 0 0 30rpx;
  background: #fff;
}
.cart_bottom_left{
  line-height: 93.76rpx;
  font-size: 26.25rpx;
  color: #232323;
}
.cart_bottom_left:before {
    content: "\F0C1";
}
.cart_bottom_mid{
  flex:1;
  position: relative;
}
.cart_bottom_mid_price_wrap{
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translate(0,-50%)
}
.cart_bottom_mid_all{
  font-size:26.25rpx; 
  color: #666;
}
.cart_bottom_mid_pricetag{
  font-size: 25rpx;
  color:#f44;
}
.cart_bottom_mid_price{
  font-size: 33.75rpx;
  color:#f44;
}
.cart_bottom_right{
  width: 206.26rpx;
  height: 93.76rpx;
  background: #f44;
  color: #fff;
  text-align:center;
  line-height: 93.76rpx; 
}
.cartmask{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1001;
  background: rgba(0, 0, 0, 0.4);
  height: 100%;
  width: 100%;
}
.cart_mask_list{
  width: 210rpx;
  height: 408.1rpx;
  background: #fff;
  position: absolute;
  right: 20rpx;
  top: 102.5rpx;
}
.cart_mask_list::before{
  content: " ";
  position: absolute;
  top: -32rpx;
  right: 10rpx;
  width: 0;
  height: 0;
  border: 16rpx solid ;
  border-color: transparent transparent #fff transparent;
}
.cart_mask_list_item_img_wrap{
  display: flex;
  width: 72rpx;
  align-items: center;
  }
.cart_mask_list_item_img{
  width: 36rpx;
  height: 36rpx;
  margin: 0 18rpx; 
}
.cart_mask_list_item{
 height: 81.62rpx; 
 display: flex;
 vertical-align: center;
 line-height: 81.62rpx;
 font-size: 26.4rpx;
 color: #666;
 border-bottom: 2rpx solid #eee;
}