  color: #373737;
  height: 54rpx;
  line-height: 54rpx;
}
.gusse_like_item_info{
  display: flex;
  }
  .price_wrap{
    flex:1;
  }
.price_tag{
  color: #f00;
  font-size: 33.6rpx;
