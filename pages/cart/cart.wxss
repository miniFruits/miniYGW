.van-stepper__minus,
.van-stepper__plus {
  width: 60.88rpx;
  height: 52.5rpx;
  box-sizing: border-box;
  background-color: #f2f3f5;
  border: 0;
  margin: 1.875rpx;
  position: relative;
  padding:9.375rpx;
