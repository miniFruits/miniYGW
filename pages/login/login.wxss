  font-family: 'iconfont'; /* project id 1600305 */
  src: url('//at.alicdn.com/t/font_1600305_d1409xrctz.eot');
  src: url('//at.alicdn.com/t/font_1600305_d1409xrctz.eot?#iefix') format('embedded-opentype'),
         url('//at.alicdn.com/t/font_1600305_d1409xrctz.woff2') format('woff2'),
         url('//at.alicdn.com/t/font_1600305_d1409xrctz.woff') format('woff'),
         url('//at.alicdn.com/t/font_1600305_d1409xrctz.ttf') format('truetype'),
         url('//at.alicdn.com/t/font_1600305_d1409xrctz.svg#iconfont') format('svg');
}

page {
  height: 100%;
  width: 100%;
  background: #f0f2f5;
}

.user-login {
  height: 100%;
  width: 100%;
}

.nav {
  display: flex;
  width: 100%;
}

.nav-l, .nav-r, .nav-title {
  position: relative;
  width: 66rpx;
  height: 100%;
  text-align: center;
  line-height: 66rpx;
  font-size: 21.6rpx;
}

.nav-img {
  height: 70%;
  border-radius: 50%;
  max-width: 100%;
  vertical-align: middle;
}

.nav-title {
  color: #444;
  font-size: 27.6rpx;
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.my {
  margin: 0;
  padding: 0;
  border: 0;
  font: inherit;
  vertical-align: baseline;
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 38.4rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.4rpx;
  -moz-osx-font-smoothing: grayscale;
  color: #000;
}

.icon-set:before {
  content: "\e74f";
}

.nav-t {
  top: 0;
  height: 66rpx;
  position: fixed;
  z-index: 100;
}

.nav-bgc {
  background: #fff;
  box-shadow: 0 2rpx 4rpx #ccc;
}

.icon-l:before {
  content: "\e743";
}

.content {
  padding-top: 66rpx;
  width: 88%;
  display: flex;
  flex-direction: column;
}

.mlogin {
  padding-left: 6%;
  padding-right: 6%;
}

.mlogin>input {
  flex: 1;
  background: #fff;
  padding: 24rpx;
  border-radius: 7.2rpx;
  font-size: 21.6rpx;
  color: #666;
}

.van-button {
  position: relative;
  padding: 0;
  display: inline-block;
  border-radius: 3rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  text-align: center;
  -webkit-appearance: none;
}

.van-button--large {
  width: 100%;
  height: 75rpx;
  line-height: 72rpx;
}

.van-button--warning {
  color: #fff;
  background-color: #ffac0a;
  border: 1.5rpx solid #ffac0a;
}

.mt {
  margin-top: 10%;
}

.van-button:before {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  opacity: 0;
  width: 100%;
  height: 100%;
  border: inherit;
  border-color: #000;
  background-color: #000;
  border-radius: inherit;
  transform: translate(-50%, -50%);
}

.flx {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.text-left {
  text-align: left;
}


.text-right {
  text-align: right;
  color: #fd7400;
}

.content:after {
  content: '';
  display: block;
  width: 100%;
  height: 3.9rem;
}
