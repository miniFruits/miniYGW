/* pages/home/home.wxss */
.top{
width: 100%;
overflow-x: scroll;
display: flex;
}
.top-bar{
  flex:0 0 auto;
  width: 100rpx;
  height: 77rpx;
  font-size: 25.76rpx;
  padding: 0 8.75rpx;
  font-weight: 700;
  line-height: 77rpx;
  color: #555;
}
.active.top-bar{
  color: #000;
}
.weui-search-bar{
  height: 77rpx;
  font-size: 24rpx;
  background: #fff!important;
}
.weui-search-bar__box{
  height: 59.1rpx;
  border-radius: 29.55rpx;
  background: #eee!important;
}
.weui-search-bar__form{
border-radius: 29.55rpx!important;

}
.weui-search-bar__cancel-btn{
  font-size: 24rpx;
  color: #666!important;
}
.weui-search-bar__input{
   font-size: 24rpx!important;
 
}
image.img-box{
   width: 100%!important;
}
.nav{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.nav-top {
margin-top: 42rpx;
}

.nav .nav-top-pic{
    width: 96rpx;
    
}
.nav .nav-top-pic image{
 width: 96rpx;
  height: 96rpx;
}
.nav .nav-top-pic text{
    font-size: 24rpx;
}
.nav-middle .nav-middle-pic{
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nav-middle .nav-middle-pic image{
   width: 102rpx!important;
   height: 102rpx;
}
.nav-middle .nav-middle-pic text{
   font-size: 24rpx;
   display: block;
}
.problem{
  height: 83.2rpx;
  box-sizing: border-box;
  padding: 16rpx 28rpx;
}
.problem-inner{
  display: flex;
}
.problem-inner .toutiao{
  width: 84rpx;
  height: 24rpx;
}
.problem-inner .problem-img {
  width: 38rpx;
  height: 26rpx;
  transform: rotate(-30deg);
}

.problem-swipper {
  flex: 1;
  height: 26rpx;
}
.problem-swipper .swiper-item{
    font-size: 20rpx!important;
}
.actitive-wrapper{
  height: 172rpx;
 
}
.actitive-wrapper swiper-item{
  display: flex;
  justify-content: center;
}
.actitive-wrapper image{
  width:702rpx!important; 
  height:138rpx;
}

/* 尝鲜季 */
.hot-sale{
  height: 600rpx;
  position: relative;

}
.hot-sale image{
  width: 100%;
  height: 600rpx;
}
.hot-sale  .bg-img{
    position: absolute;
}
/* 热销榜 */
.hot-list{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.hot-list image{
  width: 100%;
  height: 400rpx;
}
.yellow-img{
  position: absolute;
}

