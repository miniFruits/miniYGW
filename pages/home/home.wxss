/* pages/home/home.wxss */
.top{
width: 100%;
overflow-x: scroll;
display: flex;
}
.top-bar{
  flex:0 0 auto;
  width: 100rpx;
  height: 77rpx;
  font-size: 25.76rpx;
  padding: 0 8.75rpx;
  font-weight: 700;
  line-height: 77rpx;
  color: #555;
}
.active.top-bar{
  color: #000;
}
.weui-search-bar{
  height: 77rpx;
  font-size: 24rpx;
  background: #fff!important;
}
.weui-search-bar__box{
  height: 59.1rpx;
  border-radius: 29.55rpx;
  background: #eee!important;
}
.weui-search-bar__form{
border-radius: 29.55rpx!important;

}
.weui-search-bar__cancel-btn{
  font-size: 24rpx;
  color: #666!important;
}
.weui-search-bar__input{
   font-size: 24rpx!important;
 
}
image.img-box{
   width: 100%!important;
}
.nav{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.nav-top {
margin-top: 42rpx;
}

.nav .nav-top-pic{
    width: 96rpx;
    
}
.nav .nav-top-pic image{
 width: 96rpx;
  height: 96rpx;
}
.nav .nav-top-pic text{
    font-size: 24rpx;
}
.nav-middle .nav-middle-pic{
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nav-middle .nav-middle-pic image{
   width: 102rpx!important;
   height: 102rpx;
}
.nav-middle .nav-middle-pic text{
   font-size: 24rpx;
   display: block;
}
.problem{
  height: 83.2rpx;
  box-sizing: border-box;
  padding: 16rpx 28rpx;
}
.problem-inner{
  display: flex;
}
.problem-inner .toutiao{
  width: 84rpx;
  height: 24rpx;
}
.problem-inner .problem-img {
  width: 38rpx;
  height: 26rpx;
  transform: rotate(-30deg);
}

.problem-swipper {
  flex: 1;
  height: 26rpx;
}
.problem-swipper .swiper-item{
    font-size: 20rpx!important;
}
.actitive-wrapper{
  height: 172rpx;
 
}
.actitive-wrapper swiper-item{
  display: flex;
  justify-content: center;
}
.actitive-wrapper image{
  width:702rpx!important; 
  height:138rpx;
}
/* 尝鲜季 */

.hot-sale{
  height: 600rpx;
  position: relative;

}
.hot-sale image{
  width: 100%;
  height: 600rpx;
}
.hot-sale  .bg-img{
    position: absolute;
}

.cxj{
 width: 97%;
  position: absolute;
  bottom: 8rpx;
  left:0;
  right: 0;
  margin: auto;
  z-index: 3;
   height: 346rpx;
   background: #fff;
   border-radius: 8rpx;
}
.cxj .new{
  position: absolute;
  top: 0;
  left: 0;
  width: 88rpx;
  height: 96rpx;
}
.cxj-title{
   height: 98rpx;
 
}
.cxj-title .title{
  height: 60rpx;
  display: block;
  font-size: 32rpx;
  text-align: center;
  line-height: 60rpx;
  color: #42e32f;
}
.cxj-title .title-2{
  height: 28rpx;
  display: block;
  font-size: 24rpx;
  text-align: center;
  line-height:  28rpx;
  color: #394b37;
}
.cxj-inner{
  height: 238rpx;
  display: flex;
  justify-content: space-around;
  position: relative;
}

.cxj-item{
  width: 172rpx;
  height: 238rpx;
  border: .1rem solid #f4f3f3;
}
.cxj-item image{
  width: 168rpx;
  height: 168rpx;
}
.cxj-item text{
  display: block;
  width: 140rpx;
  height: 46rpx;
  line-height: 46rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  border-radius: .1rem;
  background-color: #f4f4f4;
  margin: 0 auto;
}