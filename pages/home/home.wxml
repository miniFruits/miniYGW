
<view  class="top">
<view class="top-bar active" bindtap="handleSelect">依谷热卖</view>
<view class="top-bar" wx:for = "{{classify}}" wx:key="{{tid}}" bindtap="handleSelect">
 {{item.tname}}
>>>>>>> master
</view>
</view>
<!-- 搜索框 -->

 <mp-searchbar 
 bindselectresult="selectResult" 
 search="{{search}}"
 placeholder="鳗鱼特惠"
 ext-class="box"
 ></mp-searchbar>
<!-- 第一个轮播 -->
<swiper indicator-dots="{{true}}"
        autoplay="{{true}}" 
        circular="{{true}}"
        indicator-active-color="green"
        >
        <block wx:for="{{swipper}}" wx:key="*this">
          <swiper-item>
            <image src="{{item.img}}" class="img-box"></image>
          </swiper-item>
        </block>
</swiper>
<!-- 金刚区 -->
<view class="nav nav-top">
   <block wx:for="{{navTop}}" wx:key="*this">
        <view class="nav-top-pic">
           <image src="{{item.img}}" class="img-box"></image>
           <text>{{item.name}}</text>
        </view>
   </block>
</view>
<view class="nav nav-middle">
    <block wx:for="{{classify}}" wx:key="*this">
        <view class="nav-middle-pic">
           <image src="{{item.timage}}" class="img-box"></image>
           <text>{{item.tname}}</text>
        </view>
    </block>
    <view class="nav-middle-pic">
           <image src="http://oss.egu365.com/upload/mobile-all-categories.jpg" class="img-box"></image>
           <text>全部分类</text>
        </view>
</view>

<!-- 依谷头条 -->
<view class="problem">
   <view class="problem-inner">
      <image src="http://m.egu365.com/img/notice_bg.jpg" class="toutiao"></image>
      <image src="../../assets/images/problem.png" class="problem-img"></image>
     
       <swiper 
       indicator-dots="{{false}}"
        autoplay="{{true}}"
        vertical="{{true}}"
        circular="{{true}}"
        class="problem-swipper"
        >
        <block wx:for="{{problemList}}" wx:key="*this">
          <swiper-item>
            <view class="swiper-item"> {{item.name}}</view>
          </swiper-item>
        </block>
      </swiper>
      
   </view>
</view>
<!-- 第二个轮播 -->

<swiper indicator-dots="{{false}}"
        autoplay="{{true}}" 
        circular="{{true}}"
        indicator-active-color="green"
        class="actitive-wrapper"
        >
        <block wx:for="{{activeList}}" wx:key="*this">
          <swiper-item>
            <image src="{{item.img}}" class="img-box"></image>
          </swiper-item>
        </block>
</swiper>

<!-- 时令热销 -->
<view class="hot-sale">
  
   <image src="{{mouth_img}}" class="bg-img"></image>
   <view class="cxj">
   <image src="../../assets/images/new.png"  class="new" ></image>
      <view class="cxj-title">
         <text class="title">尝鲜季</text>
         <text class="title-2">购鲜，每月一次的尝鲜之旅</text>
      </view>
      <view class="cxj-inner">
     
        <block wx:for="{{cxjList.bcPublishedGoodsEos}}">    
           <view class="cxj-item">
              <image src="{{item.bseGoodsEo.goodsImg}}"></image>
              <text>{{item.goodsName}}</text>
            </view>
        </block>
      </view>
   </view>
</view>